<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuntimeExpress"
        mc:Ignorable="d"
        Title="Runtime Express" Height="500" Width="315" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="RuntimeExpressv2.ico">
    <Grid>
        <Grid x:Name="gridTitle" Margin="0,0,0,407" Background="DodgerBlue">
            <Image x:Name="imageLogo" HorizontalAlignment="Left" Height="31" Width="36" VerticalAlignment="Top" Source="RuntimeExpressv2-simple.png" Stretch="Fill" />
            <Label x:Name="labelAppName" Content="RUNTIME EXPRESS" HorizontalAlignment="Left" Margin="33,0,0,0" VerticalAlignment="Top" Height="34" Width="276" FontSize="16" Foreground="White" FontWeight="Bold"/>

        </Grid>

        <Grid x:Name="gridMain" Margin="0,38,0,32">

            <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="407" VerticalAlignment="Top" Width="309" Margin="0,-6,0,0">
                <TabItem Header="运行库" Margin="-3,0,-81,0" BorderBrush="{x:Null}" Background="DodgerBlue" Foreground="Black" FontSize="13.333">
                    <Grid Background="White" Margin="-9,-4,-10,34"/>
                </TabItem>

                <TabItem Header="选项" Margin="68,0,-153,0" BorderBrush="{x:Null}" Background="DodgerBlue" Foreground="#FF060000" FontSize="13.333">
                    <Grid Background="White" Margin="-9,-2,-9,34">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="39*"/>
                            <ColumnDefinition Width="68*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </TabItem>
            </TabControl>
            <Button x:Name="btnApply" Content="应用" Margin="11,371,10,7" IsDefault="True"/>

        </Grid>

        <StatusBar Height="32" VerticalAlignment="Bottom" Width="309" Background="DodgerBlue">
            <Label x:Name="labelStat" Content="就绪" HorizontalAlignment="Left" Width="195" Foreground="White"/>
            <StatusBar x:Name="sbMain" Width="101" Height="22"/>

        </StatusBar>
    </Grid>
</Window>
